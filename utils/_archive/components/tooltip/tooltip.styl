[data-tooltip]
	position relative
	&:after
		content attr(data-tooltip)
		position absolute
		left 20%
		top 120%
		z-index 10000000
		padding 3px 6px
		max-width 320px
		color #000
		background-color #fff
		border 1px solid #000
		opacity 0
		visibility hidden
	&:hover
		&:after
			transition opacity 0ms linear 500ms
			opacity 1
			visibility visible
