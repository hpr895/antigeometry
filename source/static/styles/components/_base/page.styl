// Основа
body
	font-family 'roboto', 'arial'
	font-size 16px
	line-height 1.4
	color #000

// Страница и прижатие футера
// Наследуемся именно через ".cssall", так как в IE 11 существуют баги при рендеринге флексбоксов
.page
	min-height 100%
	.cssall &
		display flex
		flex-direction column
	&__main
		.cssall &
			flex-grow 1

// Адаптивная обёртка
.wrapper
	clearfix()
	margin auto
	padding 0 $wrapper-padding
	width 100%
	max-width $desktop
	min-width $mobile
	+below($desktop)
		width $tablet
	+below($tablet)
		width $mobile

// Секция страницы
.section
