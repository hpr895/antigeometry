// Очищает плавающий поток и не позволяет внешним отступам дочерних выходить элементов за блок
.clearfix
	clearfix()

// Запрет на выделение элемента
.noselect
	noselect()

// Адаптивная обёртка для видео
.responsive-video
	position relative
	display block
	height 0
	padding 0
	overflow hidden
	iframe
	embed
	object
	video
		position absolute
		top 0
		bottom 0
		left 0
		width 100%
		height 100%
		border 0
	&_16x9
		padding-bottom 56.25%
	&_4x3
		padding-bottom 75%
