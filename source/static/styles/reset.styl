// ====== Базовые подключения
@import 'components/_base/_variables'
@import 'components/_base/_mixins'


// ====== Сброс элементов

html
body
	margin 0
	height 100%

*
*::before
*::after
	box-sizing border-box
	outline none

a
	background-color transparent

img
	noselect()
	display inline-block
	vertical-align top
	max-width 100%
	border none

article
aside
footer
header
nav
section
figcaption
figure
main
details
menu
	display block


// ===== Сброс типографии для семантической вёрстки

h1
h2
h3
h4
h5
h6
	margin 0
	font-size inherit
	font-weight inherit

p
	margin 0

b
strong
	font-weight bold

small
	font-size 80%

sub
sup
	font-size 75%
	line-height 0
	position relative
	vertical-align baseline

sub
	bottom -0.25em

sup
	top -0.5em

ul
ol
	margin 0
	padding 0

li
	list-style none

table
	margin 0
	width 100%
	border-collapse collapse

th
td
	padding 0
	vertical-align top

th
	text-align left
	font-weight normal

figure
	margin 0

address
	font-style normal


// ====== Сброс форм

fieldset
	margin 0
	padding 0
	border 1px solid #000
	padding 1em

legend
	padding 0 0.25em
	margin 0

select
	margin 0
	padding 0 0.5em
	display block
	font-family inherit
	font-size inherit
	width 100%
	background none
	color inherit
	border 1px solid #000
	box-shadow none
	cursor pointer

option
	padding 0.5em
	font-family inherit
	font-size inherit


// ====== Поля

.field
	margin 0
	padding 0.5em 0.75em
	display block
	width 100%
	background none
	background-color #fff
	border 1px solid #000
	box-shadow none
	font-family inherit
	font-size inherit
	line-height inherit
	letter-spacing inherit
	color #000

	+placeholder()
		opacity 1
		letter-spacing inherit
		color #888

textarea.field
	height 8em
	min-height 8em
	resize vertical

input[type="checkbox"]
input[type="radio"]
	margin 0
	display inline-block
	vertical-align top

label input[type="checkbox"]
label input[type="radio"]
	margin-top -0.33em
	margin-right 0.5em

input[type="file"]
	margin 0
	padding 0.5em
	width 100%
	display block
	font-family inherit
	font-size inherit
	letter-spacing inherit
	box-shadow none
	background none
	border 1px solid #000
	cursor pointer


// ====== Чекбокс и радиокнопка на чистом CSS
// Здесь ничего не нужно трогать, а только наследовать в "forms.styl" через тему формы

.checkbox
	position relative
	display inline-block
	cursor pointer
	-webkit-user-select none
	-moz-user-select none
	-ms-user-select none

	& input[type='checkbox']
		margin 0
		position absolute
		z-index -10
		opacity 0

	& input[type='checkbox']:checked + ^[0]__dot::before
		display block

	&__dot
		position relative
		display inline-block
		vertical-align top
		width 20px
		height 20px
		border 1px solid #000
		cursor pointer

		&::before
			content ''
			position absolute
			display none
			z-index 1

			// === Как сделать галочку (подсказка)
			top 4px
			left 3px
			width 12px
			height 8px
			border 1px solid #000
			border-width 0 0 2px 2px
			transform rotate(-45deg)

			// === Как сделать точку (подсказка)
			// top 2px
			// left 2px
			// width 14px
			// height 14px
			// background-color #000

	&__content
		margin 0 0.15em
		display inline-block
		vertical-align top

.radio
	position relative
	display inline-block
	cursor pointer
	-webkit-user-select none
	-moz-user-select none
	-ms-user-select none

	& input[type='radio']
		margin 0
		position absolute
		z-index -10
		opacity 0

	& input[type='radio']:checked + ^[0]__dot::before
		display block

	&__dot
		position relative
		margin-right 0.15em
		display inline-block
		vertical-align top
		width 20px
		height 20px
		border 1px solid #000
		cursor pointer
		border-radius 100px

		&::before
			content ''
			display none
			position absolute
			top 2px
			left 2px
			width 14px
			height 14px
			border-radius 100px
			background-color #000

	&__content
		margin 0 0.15em
		display inline-block
		vertical-align top


